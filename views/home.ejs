<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BREAD (Browse, Read, Edit, Add, Delete)</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/js/util.js"></script>
</head>
<body>
    <div class="container">
        <h1>SQLite Bread (Browse,Read,Edit,Add,Delete) and Pagination</h1>
        <form action="" method="get">
            <input type="hidden" id="page" name="page" value="1">
            <div class="inner">
                <div class="row">
                    <label for="name">Name</label>
                    <div class="col-75">
                        <input type="text" id="name" name="name" placeholder="insert your name" value="<%= query.name %>">
                    </div>
                </div>
                <div class="row">
                    <label for="height">Height</label>
                    <div class="col-75">
                        <input type="number" id="height" name="height" placeholder="insert your height" value="<%= query.height %>">
                    </div>
                </div>
                <div class="row">
                    <label for="weight">Weight</label>
                    <div class="col-75">
                        <input type="number" step="0.001" id="weight" name="weight" placeholder="insert your weight" value="<%= query.weight %>">
                    </div>
                </div>
                <div class="rowbirth">
                    <label for="birthdate">Birth Date</label>
                    <div class="birthdate">
                        <input type="date" id="strBirth" name="strBirth" value="<%= query.strBirth %>">
                        <p>s.d.</p>
                        <input type="date" id="endBirth" name="endBirth" value="<%= query.endBirth %>">
                    </div>
                </div>
                <div class="rowselect">
                    <label for="married">Is Married</label>
                    <% if(query.married == '1') { %>
                    <select id="married" name="married">
                        <option disabled>-select married-</option>
                        <option value="1" selected>Yes</option>
                        <option value="0">Not Yet</option>
                    </select>
                    <% } else if (query.married == '0') { %>
                        <select id="married" name="married">
                            <option disabled>-select married-</option>
                            <option value="1">Yes</option>
                            <option value="0" selected>Not Yet</option>
                        </select>
                    <% } else { %>
                        <select id="married" name="married">
                            <option disabled selected>-select married-</option>
                            <option value="1">Yes</option>
                            <option value="0">Not Yet</option>
                        </select>
                    <% } %>
                </div>
                <div class="rowradio">
                    <legend>Operation</legend>
                        <% if(query.type_search == 'OR') { %>
                            <div class="select" id="select">
                                <div class="option">
                                    <input type="radio" id="OR" name="type_search" value="OR" checked/>OR
                                </div>
                                <div class="option">
                                    <input type="radio" id="AND" name="type_search" value="AND"/>AND
                                </div>
                            </div>
                        <% } else if(query.type_search == "AND") { %>
                            <div class="select" id="select">
                                <div class="option">
                                    <input type="radio" id="OR" name="type_search" value="OR"/>OR
                                </div>
                                <div class="option">
                                    <input type="radio" id="AND" name="type_search" checked value="AND"/>AND
                                </div>
                            </div>
                        <% } else { %>
                            <div class="select" id="select">
                                <div class="option">
                                    <input type="radio" id="OR" name="type_search" value="OR" required/>OR
                                </div>
                                <div class="option">
                                    <input type="radio" id="AND" name="type_search" value="AND"/>AND
                                </div>
                            </div>
                        <% } %>
                    </div>
                    <div class="buttonfind">
                        <input type="submit" value="Search">
                        <a href="/">Reset</a>
                    </div>                 
            </div>
        </form>
        <div class="table">
            <table>
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Name</th>
                        <th>Height</th>
                        <th>Weight</th>
                        <th>Birth Date</th>
                        <th>Is Married</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach((value,index)=> { %>
                        <% if(value.married) {%>
                            <% married = "Yes" %>
                                <tr>
                                    <td>
                                        <%= index + offset + 1 %>
                                    </td>
                                    <td>
                                        <%= value.name %>
                                    </td>
                                    <td>
                                        <%= value.height %>
                                    </td>
                                    <td>
                                        <%= value.weight %>
                                    </td>
                                    <td>
                                        <%= value.birthdate %>
                                    </td>
                                    <td>
                                        <%= married %>
                                    </td>
                                    <td>
                                        <a class="update" href="/form/<%= value.id %>">Update</a>&nbsp<a class="delete" href="/delete/<%= value.id %>" onclick="return confirmation('<%= value.name %>')">Delete</a>
                                    </td>
                                </tr>
                        <% } else if(!value.married) {%>
                            <% married = "Not Yet" %>
                                <tr>
                                    <td>
                                        <%= index + offset + 1 %>
                                    </td>
                                    <td>
                                        <%= value.name %>
                                    </td>
                                    <td>
                                        <%= value.height %>
                                    </td>
                                    <td>
                                        <%= value.weight %>
                                    </td>
                                    <td>
                                        <%= value.birthdate %>
                                    </td>
                                    <td>
                                        <%= married %>
                                    </td>
                                    <td>
                                        <a class="update" href="/form/<%= value.id %>">Update</a>&nbsp<a class="delete" href="/delete/<%= value.id %>" onclick="return confirmation('<%= value.name %>')">Delete</a>
                                    </td>
                                </tr>
                                <% } %>      
                    <% }) %>
                </tbody>
            </table>
        </div>
        <div class="foot">
            <a id="add" href="/form">Add</a>
            <div class="page">
                <% if(page == '1') { %>
                    <a href="<%= url.replace(`page=${page}`, `page=${page}`) %>">&laquo;</a>
                <% } else { %>
                    <a href="<%= url.replace(`page=${page}`, `page=${page - 1}`) %>">&laquo;</a>
                <% } %>
                
                <div class="pagenumber">
                <% for(let i = 1; i <= pages; i++) { %>
                    <% if(url.includes('page=')) { %>
                        <% if(i == page) { %>
                            <a href="<%= url.replace(`page=${page}`, `page=${i}`) %>" class="select"><%= i %></a>
                        <% } else { %>
                            <a href="<%= url.replace(`page=${page}`, `page=${i}`) %>"><%= i %></a>
                        <% } %>
                    <% } else { %>
                        <% if(i == page) { %>
                            <a href="/?page=<%= i %>" class="select"><%= i %></a>
                        <% } else { %>
                            <a href="/?page=<%= i %>"><%= i %></a>
                        <% } %>
                    <% } %>
                <% } %> 
                </div>
                <% if(page == pages) { %>
                    <a href="<%= url.replace(`page=${page}`, `page=${page}`) %>">&raquo;</a>
                <% } else { %>
                    <a href="<%= url.replace(`page=${page}`, `page=${(page * 1) + 1}`) %>">&raquo;</a>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>